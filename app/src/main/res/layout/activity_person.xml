<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pages"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
             >

            <RelativeLayout
                android:id="@+id/recordPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/text_record"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/str_record"
                        android:textColor="#82858b" />
                    <ImageView
                        android:id="@+id/image_record"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/underline" />


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/honorPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/text_honor"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/str_honor"
                        android:textColor="#82858b" />
                    <ImageView
                        android:id="@+id/image_honor"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/underline"
                        android:visibility="invisible"/>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/todayPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/text_today"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/str_today"
                        android:textColor="#82858b" />
                    <ImageView
                        android:id="@+id/image_today"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/underline"
                        android:visibility="invisible"/>


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp" >
        </FrameLayout>


    </RelativeLayout>

</LinearLayout>